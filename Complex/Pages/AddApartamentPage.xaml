<Page x:Class="Complex.Pages.AddApartamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Complex.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="525"
      Background="White" Height="315"
      d:DesignHeight="450"
      Title="Добавление/Изменение квартир">

    <Grid>
        <ListView x:Name="HouseLV" HorizontalAlignment="Left" Height="232" VerticalAlignment="Top" Width="233" Margin="10,43,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding NumberOfHouse}"/>
                    <GridViewColumn Header="Улица" DisplayMemberBinding="{Binding Street}"/>
                    <GridViewColumn Header="Комплекс" DisplayMemberBinding="{Binding Complex.Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="NumnOfFlatTB" HorizontalAlignment="Left" Height="23" Margin="378,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AreaTB" HorizontalAlignment="Left" Height="23" Margin="378,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AddValueTB" HorizontalAlignment="Left" Height="23" Margin="378,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CountOfRoomsTB" HorizontalAlignment="Left" Height="23" Margin="378,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CostOfBuildingTB" HorizontalAlignment="Left" Height="23" Margin="378,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PorchTB" HorizontalAlignment="Left" Height="23" Margin="378,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FloorTB" HorizontalAlignment="Left" Height="23" Margin="378,227,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="StateCB" HorizontalAlignment="Left" Margin="378,255,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddEditBTN" HorizontalAlignment="Left" Margin="405,280,0,0" VerticalAlignment="Top" Width="100" Click="AddEditBTN_Click"/>
        <Label Content="Этаж" HorizontalAlignment="Left" Margin="261,59,0,0" VerticalAlignment="Top"/>
        <Label Content="Площадь" HorizontalAlignment="Left" Margin="261,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Доб. стоймость" HorizontalAlignment="Left" Margin="261,115,0,0" VerticalAlignment="Top"/>
        <Label Content="Каол-во комнат" HorizontalAlignment="Left" Margin="261,143,0,0" VerticalAlignment="Top"/>
        <Label Content="ещё стоимость" HorizontalAlignment="Left" Margin="261,174,0,0" VerticalAlignment="Top"/>
        <Label Content="Подьезд" HorizontalAlignment="Left" Margin="261,199,0,0" VerticalAlignment="Top"/>
        <Label Content="Этаж" HorizontalAlignment="Left" Margin="261,227,0,0" VerticalAlignment="Top"/>
        <Label Content="Статус" HorizontalAlignment="Left" Margin="261,255,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
